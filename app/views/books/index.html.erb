<p id="notice"><%= notice %></p>

<div class="row heading content col-md-4 col-md-offset-4">
  <h1>Bookshelf</h1>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="content">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th >Title</th>
            <th>Author</th>
            <th colspan="2"> Meeting<br>Date/Location</th>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to "#{book.title}", book %></td>
              <td><%= book.author_first_name+" "+book.author_last_name %></td>
              <td>
                <% unless book.meeting.nil? %>
                  <%= book.meeting.location %>
                <% end %>
              </td>
              <td>
                <% unless book.meeting.nil? %>
                  <%= book.meeting.date %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if user_signed_in? %>
        <div>
          <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>Add New Book'), new_book_path%>
        </div>
      <% end %>
    </div>
  </div>
</div>

