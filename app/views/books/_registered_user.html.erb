<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% if @book.meeting %>
      <%= render 'shared/meeting' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render 'shared/notes' %>
  </div>
  <div class="col-md-4">
    <% if @book.meeting.nil?%>
      <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>Add A Meeting For This Book'), new_meeting_path(:book_id=> @book.id)%>
    <% elsif @book.meeting %>
      <%= render 'shared/meeting' %>
    <% end %>
  </div>
</div>
<div>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_book_path, {:book_id=>@book.id} %> |
  <% end %>
  <%= link_to 'Back', books_path %>
</div>
