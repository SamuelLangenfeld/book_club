<div class="col-md-4 col-md-offset-4">
  <div class="row">
    <div class="heading content">
      <h1>Users</h1>
    </div>
  </div>
  <div class="row">
    <div class="content">
      <table class="table table-bordered table-hover left-align">
          <% @users.each do |user| %>
            <tr>
              <td>     
              <% if user==current_user%>
                <%= link_to "#{user.name}", user_path(user) %>
              <% else %>
                <%= user.name %>
              <% end %>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
