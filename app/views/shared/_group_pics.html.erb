<div class="row">
  <div class="col-md-12">
    <div class="heading">
      <div class="content-title">
        <h2>Pictures From the Meeting</h2>
      </div>
    </div>
  </div>


  <% @group_pics=@book.group_pics %>

  <% unless @group_pics.empty? %>
    <div class="col-md-12 centered">
      <div class="carousel-container">
        <div id="group-pic-carousel" class="carousel slide" data-ride="carousel" data-interval="null" style="height:500px;"> 

          <!-- indicators -->
          
          <ol class="carousel-indicators" >
            <% @group_pics.each_with_index do |pic, i| %>
              <li data-target="#group-pic-carousel" data-slide-to=<%=i.to_s%>
              <% if i==0 %>
                class="active"
              <% end %>
              ></li>
            <% end %>
          </ol>


          <!-- slides wrapper -->
          <div class="carousel-inner" role="listbox">
            <% @group_pics.each do |group_pic| %>
              <div class=
                <% if group_pic==@group_pics.first %>
                  "active item"
                <% else %>
                  "item"
                <% end %> >
                <img src=<%= group_pic.picture %> alt="">
              </div>
            <% end %>



            <!-- Controls -->
            <a class="left carousel-control" href="#group-pic-carousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#group-pic-carousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% unless @group_pics.size>10%>
    <div style="text-align:center">
      <div class="content-form" style="text-align: left;">
      <%= form_for GroupPic.new do |f|%>
        <%= f.hidden_field :book_id, :value=>@book.id %>
        <div style="text-align:center;">
        <h4>Add Picture</h4>
        </div>
        <%= f.file_field :picture, :required=>true%>
        <%= f.submit "Upload Picture" %>
      <% end %>
      </div>
    </div>
  <% end %>
</div>