<div class="row">
  <div class="col-md-12">
    <div class="heading">
      <div class="content-title">
        <h2>Group Pictures</h2>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12" style="height:550px; background-color:black;">
    <% @group_pics=@book.group_pics %>

    <div id="example" class="carousel-slide" data-ride="carousel" data-interval="2000" style="height:550px;">

      <!-- indicators -->
      <ol class="carousel-indicators" >
        <li data-target="#example" data-slide-to="0" class="active"></li>
        <li data-target="#example" data-slide-to="1"></li>
        <li data-target="#example" data-slide-to="2" ></li>
        <li data-target="#example" data-slide-to="3"></li>
        <li data-target="#example" data-slide-to="4" ></li>
      </ol>

      <!-- slides wrapper -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img src=<%= GroupPic.find(5).picture %> alt=""> 
          <div class="carousel-caption" style="color:black;">
            <h1>Picture 1</h1>
          </div>
        </div>
        <div class="item">
          <img src=<%= GroupPic.find(2).picture %> alt="">
          <div class="carousel-caption" style="color:black;">
            <h1>Picture 2</h1>
          </div>
        </div>
        <div class="item">
          <img src=<%= GroupPic.find(4).picture %> alt="">
          <div class="carousel-caption" style="color:black;">
            <h1>Picture 3</h1>
          </div>
        </div>
        <div class="item">
          <img src=<%= GroupPic.find(5).picture %> alt="">
          <div class="carousel-caption" style="color:black;">
            <h1>Picture 4</h1>
          </div>
        </div>
        <div class="item">
          <img src=<%= GroupPic.find(6).picture %> alt="">
          <div class="carousel-caption" style="color:black;">
            <h1>Picture 5</h1>
          </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#example" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#example" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

<div>
  <div class="content-title" style="text-align: left;">
  <%= form_for GroupPic.new do |f|%>
    <%= f.hidden_field :book_id, :value=>@book.id %>
    <div style="text-align:center;">
    <h4>Add Picture</h4>
    </div>
    <%= f.file_field :picture%>
    <%= f.submit "Upload Picture" %>
  <% end %>
  </div>
</div>